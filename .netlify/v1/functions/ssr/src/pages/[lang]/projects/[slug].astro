---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const { slug } = Astro.params;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Find the project matching the slug + language
const allProjects = await getCollection("projects");
const project = allProjects.find((p) => {
  const projectSlug = p.slug.split("/").pop();
  return projectSlug === slug && p.data.lang === lang;
});

if (!project) {
  return Astro.redirect(`/${lang}/projects`);
}

const { Content } = await project.render();
---

<Layout title={project.data.title}>
  <main class="container mx-auto px-4 py-12 max-w-4xl">
    <!-- Back button -->
    <a href={`/${lang}/projects`} class="back-link">
      ‚Üê {t("nav.projects")}
    </a>

    <!-- Project header -->
    <header class="project-header">
      <h1 class="project-title">{project.data.title}</h1>
      <p class="project-desc">{project.data.description}</p>

      {
        project.data.image && (
          <img
            src={project.data.image}
            alt={project.data.title}
            class="project-image"
          />
        )
      }

      <!-- Technologies -->
      <div class="tech-tags">
        {
          project.data.technologies.map((tech) => (
            <span class="tech-tag">{tech}</span>
          ))
        }
      </div>

      <!-- Links -->
      <div class="project-links">
        {
          project.data.github && (
            <a
              href={project.data.github}
              target="_blank"
              rel="noopener noreferrer"
              class="link-btn link-github"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
              </svg>
              GitHub
            </a>
          )
        }
        {
          project.data.demo && (
            <a
              href={project.data.demo}
              target="_blank"
              rel="noopener noreferrer"
              class="link-btn link-demo"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2.5"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
                <polyline points="15 3 21 3 21 9" />
                <line x1="10" y1="14" x2="21" y2="3" />
              </svg>
              {t("projects.viewDemo")}
            </a>
          )
        }
      </div>
    </header>

    <!-- Project content (markdown) -->
    <article class="prose-content">
      <Content />
    </article>
  </main>
</Layout>

<style>
  @reference "../../../styles/global.css";

  .back-link {
    display: inline-block;
    margin-bottom: 24px;
    font-family: var(--font-jakarta, sans-serif);
    font-size: 14px;
    color: var(--color-text-secondary, #626262);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .back-link:hover {
    color: var(--color-text-primary, #3d3d3d);
  }

  .project-header {
    margin-bottom: 40px;
  }

  .project-title {
    font-family: var(--font-fraunces, serif);
    font-size: 36px;
    font-weight: 700;
    color: var(--color-text-primary, #3d3d3d);
    margin-bottom: 12px;
    line-height: 1.2;
  }

  .project-desc {
    font-family: var(--font-jakarta, sans-serif);
    font-size: 16px;
    color: var(--color-text-secondary, #626262);
    margin-bottom: 24px;
    line-height: 1.65;
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 24px;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .tech-tag {
    padding: 5px 14px;
    border: 1.5px solid var(--color-text-primary, #3d3d3d);
    border-radius: 999px;
    font-family: var(--font-jetbrains, monospace);
    font-size: 12px;
    font-weight: 500;
    color: var(--color-text-primary, #3d3d3d);
  }

  .project-links {
    display: flex;
    gap: 12px;
  }

  .link-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: 999px;
    font-family: var(--font-jetbrains, monospace);
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-decoration: none;
    transition:
      opacity 0.2s ease,
      transform 0.15s ease;
  }

  .link-btn:hover {
    opacity: 0.85;
    transform: translateY(-1px);
  }

  .link-github {
    background: var(--color-buttons, #3d3d3d);
    color: var(--color-text-buttons, #f4f1ea);
  }

  .link-demo {
    background: transparent;
    color: var(--color-text-primary, #3d3d3d);
    border: 1.5px solid var(--color-text-primary, #3d3d3d);
  }

  /* Markdown content */
  .prose-content :global(h1) {
    font-family: var(--font-fraunces, serif);
    font-size: 28px;
    font-weight: 700;
    color: var(--color-text-primary, #3d3d3d);
    margin-top: 32px;
    margin-bottom: 16px;
  }

  .prose-content :global(h2) {
    font-family: var(--font-fraunces, serif);
    font-size: 22px;
    font-weight: 600;
    color: var(--color-text-primary, #3d3d3d);
    margin-top: 24px;
    margin-bottom: 12px;
  }

  .prose-content :global(p) {
    font-family: var(--font-jakarta, sans-serif);
    font-size: 15px;
    line-height: 1.7;
    color: var(--color-text-secondary, #626262);
    margin-bottom: 16px;
  }

  .prose-content :global(ul) {
    list-style: disc;
    padding-left: 24px;
    margin-bottom: 16px;
  }

  .prose-content :global(li) {
    font-family: var(--font-jakarta, sans-serif);
    font-size: 15px;
    line-height: 1.65;
    color: var(--color-text-secondary, #626262);
    margin-bottom: 6px;
  }

  .prose-content :global(code) {
    background: #f0ece4;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: var(--font-jetbrains, monospace);
    font-size: 13px;
  }
</style>
