---
import type { CollectionEntry } from "astro:content";
import { getProjectUrl } from "../i18n/utils";

interface Props {
  project: CollectionEntry<"projects">;
  lang: string;
}

const { project, lang } = Astro.props;
const { title, description, image, technologies, github, demo } = project.data;

const slug = project.slug.split("/").pop() || "";
const projectUrl = getProjectUrl(slug, lang);
---

<a href={projectUrl} class="project-card" aria-label={`Ver proyecto ${title}`}>
  <div class="card-image-wrapper">
    {
      image ? (
        <img src={image} alt={title} class="card-image" />
      ) : (
        <div class="card-image-placeholder" />
      )
    }

    <div class="card-overlay-buttons">
      {
        github && (
          <span
            class="card-btn card-btn-github"
            onclick={`event.preventDefault(); event.stopPropagation(); window.open('${github}', '_blank')`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            GITHUB
          </span>
        )
      }
      {
        demo && (
          <span
            class="card-btn card-btn-demo"
            onclick={`event.preventDefault(); event.stopPropagation(); window.open('${demo}', '_blank')`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
            DEMO
          </span>
        )
      }
    </div>
  </div>

  <div class="card-tags">
    {technologies.map((tech) => <span class="card-tag">{tech}</span>)}
  </div>

  <p class="card-description">{description}</p>

  <h3 class="card-title">{title}</h3>
</a>

<style>
  .project-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1.5px solid #e2ddd6;
    border-radius: 16px;
    overflow: hidden;
    background: var(--color-secondary, #ffffff);
    transition:
      box-shadow 0.25s ease,
      transform 0.25s ease;
    cursor: pointer;
    width: 100%;
  }

  .card-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #d0ccc6;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: grayscale(100%); /* Normal state: Color */
    transition:
      transform 0.4s ease,
      filter 0.4s ease;
  }

  .card-image-wrapper::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Dense SVG Noise - Maximum visibility */
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.8; /* High opacity for visibility */
    mix-blend-mode: overlay;
    pointer-events: none;
    z-index: 1;
    transition: opacity 0.3s ease;
  }

  .project-card:hover .card-image-wrapper::after {
    opacity: 0; /* Remove noise on hover */
  }
  .project-card:hover .card-image {
    transform: scale(1.04);
    filter: grayscale(0%); /* Hover effect: Grayscale */
  }

  .card-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #d0ccc6 0%, #b8b3ac 100%);
  }

  /* ─── Overlay Buttons ─── */
  .card-overlay-buttons {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    gap: 8px;
    z-index: 2;
  }

  .card-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 7px 14px;
    border-radius: 999px;
    font-family: var(--font-jetbrains, monospace);
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.06em;
    cursor: pointer;
    user-select: none;
    transition:
      opacity 0.2s ease,
      transform 0.15s ease;
    line-height: 1;
  }

  .card-btn:hover {
    opacity: 0.85;
    transform: scale(1.05);
  }

  .card-btn-github {
    background: var(--color-buttons, #3d3d3d);
    color: var(--color-text-buttons, #f4f1ea);
  }

  .card-btn-demo {
    background: var(--color-buttons, #3d3d3d);
    color: var(--color-text-buttons, #f4f1ea);
  }

  /* ─── Tech Tags ─── */
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 14px 16px 0;
  }

  .card-tag {
    padding: 5px 14px;
    border: 1.5px solid var(--color-text-primary, #3d3d3d);
    border-radius: 999px;
    font-family: var(--font-jetbrains, monospace);
    font-size: 11px;
    font-weight: 500;
    color: var(--color-text-primary, #3d3d3d);
    background: transparent;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }

  /* ─── Description ─── */
  .card-description {
    padding: 12px 16px 0;
    font-family: var(--font-jakarta, sans-serif);
    font-size: 13px;
    line-height: 1.65;
    color: var(--color-text-secondary, #626262);
    text-align: left;
    margin: 0;
  }

  /* ─── Title ─── */
  .card-title {
    padding: 10px 16px 18px;
    font-family: var(--font-fraunces, serif);
    font-size: 22px;
    font-weight: 700;
    color: var(--color-text-primary, #3d3d3d);
    text-align: left;
    margin: 0;
    line-height: 1.2;
  }
</style>
